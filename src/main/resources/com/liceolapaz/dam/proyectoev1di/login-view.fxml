<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.layout.VBox?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.PasswordField?>
<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.image.ImageView?>
<?import javafx.scene.control.TextField?>
<BorderPane xmlns="http://javafx.com/javafx/17.0.12" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.liceolapaz.dam.proyectoev1di.Controllers.LoginController">
    <center>
        <VBox alignment="CENTER" maxHeight="-Infinity" maxWidth="-Infinity" minHeight="-Infinity" minWidth="-Infinity" prefHeight="600.0" prefWidth="800.0" spacing="5.0" BorderPane.alignment="TOP_CENTER">
            <children>
                <Label styleClass="login_title" text="THE GAME BUFFER">
                    <VBox.margin>
                        <Insets bottom="15.0" />
                    </VBox.margin></Label>
                <ImageView fx:id="login_icon" fitHeight="150.0" fitWidth="200.0" pickOnBounds="true" preserveRatio="true">
                    <VBox.margin>
                        <Insets bottom="20.0" />
                    </VBox.margin></ImageView>
                <Label text="Usuario" />
                <TextField>
                    <VBox.margin>
                        <Insets left="200.0" right="200.0" />
                    </VBox.margin>
                </TextField>
                <Label text="Contraseña">
                    <VBox.margin>
                        <Insets top="10.0" />
                    </VBox.margin></Label>
                <PasswordField>
                    <VBox.margin>
                        <Insets left="200.0" right="200.0" />
                    </VBox.margin>
                </PasswordField>
                <Button mnemonicParsing="false" text="Iniciar sesión">
                    <VBox.margin>
                        <Insets bottom="30.0" top="10.0" />
                    </VBox.margin></Button>
                <Label text="No tienes cuenta? Regístrate aquí!" />
                <Button mnemonicParsing="false" text="Registrarme" onAction="#goToRegister"/>
            </children>
        </VBox>
    </center>
</BorderPane>
